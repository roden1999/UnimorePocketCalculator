@page "/fetchdata"

@inject GuageChartService GuageChartService

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (forecasts == null)
{
	<p><em>Loading...</em></p>
}
else
{
	<table class="table">
		<thead>
			<tr>
				<th>Date</th>
				<th>Temp. (C)</th>
				<th>Temp. (F)</th>
				<th>Summary</th>
				<th>Summary</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var forecast in forecasts)
			{
				<tr>
					<td>@forecast.Guage</td>
					<td>@forecast.Inches</td>
					<td>@forecast.Mm</td>
					<td>@forecast.LbFt2</td>
				</tr>
			}
		</tbody>
	</table>
}

@code {
	private Data.GuageChart[] forecasts;

	protected override async Task OnInitializedAsync()
	{
		forecasts = await GuageChartService.GetGuageAsync();
	}
}
