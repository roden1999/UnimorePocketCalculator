@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Info" Fixed="true">
        <MudAvatar Color="Color.Info" Image="images/upc.png" />
        <MudText Typo="Typo.h6" Style="margin-left: 5px">@(_drawerOpen == false ? "Unimore Pocket Calculator" : "")</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Dashboard" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        @if (_drawerOpen == true)
        {
            <MudDrawerHeader Style="background-image: url(images/header.jpg);">
                    <MudText Typo="Typo.h5" Align="Align.Center"><b>Unimore Pocket Calculator</b></MudText>
            </MudDrawerHeader>
        }
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}